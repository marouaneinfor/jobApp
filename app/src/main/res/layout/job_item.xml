<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="180dp"
              android:orientation="vertical"
    >

  <android.support.v7.widget.CardView
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:id="@+id/job_item"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardPreventCornerOverlap="false"
      app:cardUseCompatPadding="true"
      >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:elevation="4dp"
        android:padding="16dp">

      <ImageView
          android:id="@+id/imageView_job"
          android:layout_width="80dp"
          android:layout_height="match_parent"
          android:layout_alignParentTop="true"
          android:layout_marginRight="18dp"
          android:src="@drawable/ic_visibility_black_24dp"
          />

      <TextView
          android:id="@+id/TextView_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_toRightOf="@+id/imageView_job"
          android:paddingBottom="5dp"
          android:textSize="18sp"/>

      <TextView
          android:id="@+id/TextView_postedBy"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/TextView_title"
          android:layout_toRightOf="@+id/imageView_job"
          android:textColor="#8b8b8b"
          android:textSize="16sp"/>


      <ImageView
          android:id="@+id/ImageView_numberOfViews"
          android:layout_width="20dp"
          android:layout_height="40dp"
          android:layout_below="@+id/TextView_postedDate"
          android:layout_marginLeft="210dp"
          android:layout_marginTop="10dp"

          android:src="@drawable/ic_visibility_black_24dp"
          />
      <TextView
          android:id="@+id/TextView_viewedCount"
          android:layout_marginTop="20dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/TextView_postedDate"
          android:layout_toRightOf="@id/ImageView_numberOfViews"
          android:textColor="#8b8b8b"
          android:textSize="14sp"
          />
      <ImageView
          android:id="@+id/ImageView_numberOfPost"
          android:layout_width="25dp"
          android:layout_height="40dp"
          android:layout_below="@+id/TextView_postedDate"
          android:layout_marginLeft="25dp"
          android:layout_marginTop="10dp"
          android:layout_toRightOf="@+id/ImageView_numberOfViews"
          android:src="@drawable/ic_supervisor_account_black_24dp"
          />
      <TextView
          android:id="@+id/TextView_submittedCount"
          android:layout_marginTop="20dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/TextView_postedDate"
          android:layout_toRightOf="@id/ImageView_numberOfPost"
          android:textColor="#8b8b8b"
          android:textSize="14sp"
          />

      <TextView
          android:id="@+id/TextView_postedDate"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#8b8b8b"
          android:textSize="16sp"
          android:layout_below="@+id/TextView_postedBy"
          android:layout_toRightOf="@+id/imageView_job"
          android:layout_toEndOf="@+id/imageView_job"

          />

    </RelativeLayout>

  </android.support.v7.widget.CardView>
</LinearLayout>